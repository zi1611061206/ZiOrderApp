<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleriew_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/padding_view"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imagebutton_reload_table"
        android:src="@drawable/reload"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/space_view"
        android:background="@drawable/round_button_format"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="@dimen/font_title_lv3"
        android:textAlignment="center"
        android:textAllCaps="false"/>

</RelativeLayout>