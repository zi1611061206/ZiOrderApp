<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/white_item_format"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textview_change_password_title"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/font_title_lv1"
        android:textAlignment="center"
        android:text="@string/change_password"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/space_view"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/space_view"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edittext_old_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_view"
                android:drawablePadding="@dimen/space_view"
                android:hint="@string/old_password"
                android:maxLength="30"
                android:inputType="textPassword" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edittext_new_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_view"
                android:drawablePadding="@dimen/space_view"
                android:hint="@string/new_password"
                android:maxLength="30"
                android:inputType="textPassword" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edittext_renew_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_view"
                android:drawablePadding="@dimen/space_view"
                android:hint="@string/renew_password"
                android:maxLength="30"
                android:inputType="textPassword" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview_error_change_password"
                android:textStyle="italic"
                android:textColor="@color/red"
                android:textSize="@dimen/font_paragraph"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/space_view"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_margin="@dimen/space_view"
            android:padding="@dimen/padding_view"
            android:orientation="vertical"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/button_cancel_change_password_dialog"
                android:layout_margin="@dimen/space_view"
                android:background="@drawable/gray_button_format"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/font_title_lv3"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:text="@string/cancel"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/button_confrim_change_password_dialog"
                android:layout_margin="@dimen/space_view"
                android:background="@drawable/green_button_format"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/font_title_lv3"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:text="@string/confirm"/>

        </androidx.appcompat.widget.LinearLayoutCompat>



    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>