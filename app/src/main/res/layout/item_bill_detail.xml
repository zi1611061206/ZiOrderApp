<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/sky_item_format"
    android:padding="@dimen/padding_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textview_dish_bill_detail"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/font_paragraph"
        android:text="@string/dishes_name"
        android:paddingStart="@dimen/padding_view"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_price_bill_detail"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textSize="@dimen/font_paragraph"
            android:text="@string/dishes_price"
            android:paddingStart="@dimen/padding_view"
            android:layout_weight="1"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_amount_bill_detail"
            android:textColor="@color/black"
            android:textSize="@dimen/font_paragraph"
            android:text="x1"
            android:textAlignment="center"
            android:layout_weight="1"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_prepay_bill_detail"
            android:textStyle="bold"
            android:textColor="@color/green_dark"
            android:textSize="@dimen/font_paragraph"
            android:text="0000"
            android:textAlignment="textEnd"
            android:layout_weight="1"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>