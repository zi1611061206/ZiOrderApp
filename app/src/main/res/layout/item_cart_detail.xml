<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/sky_item_format"
    android:layout_width="match_parent"
    android:padding="@dimen/padding_view"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textview_dish_item_cart"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/font_paragraph"
        android:text="@string/dishes_name"
        android:paddingStart="@dimen/padding_view"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_price_item_cart"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textSize="@dimen/font_paragraph"
            android:text="@string/dishes_price"
            android:paddingStart="@dimen/padding_view"
            android:layout_weight="1"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imagebutton_amount_down_item_cart"
                android:background="@drawable/red_square_button_format"
                android:src="@drawable/subtraction"
                android:padding="@dimen/padding_view"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textview_amount_item_cart"
                android:textColor="@color/black"
                android:textSize="@dimen/font_paragraph"
                android:textAlignment="center"
                android:text="x1"
                android:paddingStart="@dimen/padding_view"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imagebutton_amount_up_item_cart"
                android:background="@drawable/green_square_button_format"
                android:src="@drawable/add"
                android:padding="@dimen/padding_view"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_prepay_item_cart"
            android:textStyle="bold"
            android:textColor="@color/green_dark"
            android:textSize="@dimen/font_paragraph"
            android:text="0000"
            android:textAlignment="textEnd"
            android:layout_weight="1"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>